<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.helsinki.sauna_app.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fi.helsinki.sauna_app.app.activity.StatusActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fi.helsinki.sauna_app.app.activity.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="fi.helsinki.sauna_app.app.activity.UserProfileActivity"
            android:label="@string/action_user_profile" >
        </activity>

        <service android:name="fi.helsinki.sauna_app.app.service.SensorService" />
    </application>

</manifest>
